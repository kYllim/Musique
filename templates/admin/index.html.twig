{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-16 p-8 bg-gray-900 rounded-lg shadow-md text-white">
        <h1 class="text-3xl font-bold mb-6">Tableau de bord Admin</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="{{ path('app_album_index') }}" class="bg-gray-800 p-8 rounded-lg shadow hover:bg-gray-700 transition">
                <h2 class="text-xl font-semibold mb-2">Gérer les albums</h2>
                <p class="text-gray-400">Voir, modifier et supprimer des albums.</p>
            </a>
            <a href="{{ path('app_artist_index') }}" class="bg-gray-800 p-8 rounded-lg shadow hover:bg-gray-700 transition">
                <h2 class="text-xl font-semibold mb-2">Gérer les artistes</h2>
                <p class="text-gray-400">Voir, modifier et supprimer des artistes.</p>
            </a>
            <a href="{{ path('app_playlist_index') }}" class="bg-gray-800 p-8 rounded-lg shadow hover:bg-gray-700 transition">
                <h2 class="text-xl font-semibold mb-2">Gérer les playlists</h2>
                <p class="text-gray-400">Voir, modifier et supprimer des playlists.</p>
            </a>
            <a href="{{ path('app_user_index') }}" class="bg-gray-800 p-8 rounded-lg shadow hover:bg-gray-700 transition">
                <h2 class="text-xl font-semibold mb-2">Gérer les utilisateurs</h2>
                <p class="text-gray-400">Voir, modifier et supprimer des utilisateurs.</p>
            </a>
            <a href="{{ path('app_comment_index') }}" class="bg-gray-800 p-8 rounded-lg shadow hover:bg-gray-700 transition">
                <h2 class="text-xl font-semibold mb-2">Gérer les commentaires</h2>
                <p class="text-gray-400">Voir, modifier et supprimer les commentaires.</p>
            </a>
        </div>
    </div>
{% endblock %}
