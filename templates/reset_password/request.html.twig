{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-16 p-8 bg-gray-900 rounded-lg shadow-md text-white">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="mb-4 p-3 bg-red-700 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-3xl font-semibold mb-6 text-green-500">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}

        {{ form_row(requestForm.email, {
            'attr': {
                'class': 'w-full px-4 py-2 rounded bg-gray-800 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-green-500 text-white'
            },
            'label_attr': {'class': 'block mb-1 font-medium text-green-500'}
        }) }}

        <div class="text-sm text-gray-400 mb-4">
            Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
        </div>

        <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-black font-semibold py-2 rounded transition">
            Envoyer le lien de réinitialisation
        </button>

        {{ form_end(requestForm) }}
    </div>
{% endblock %}
