<div class="bg-gray-800 p-6 rounded-lg">
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-4">
        {% for field in form %}
            <div>
                {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full bg-gray-800 text-white border-gray-600 rounded-md shadow-sm focus:ring-green-500 focus:border-green-500'}}) }}
                {{ form_errors(field, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
            </div>
        {% endfor %}
    </div>
    <button class="w-full bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 transition">
        {{ button_label|default('Enregistrer') }}
    </button>
    {{ form_end(form) }}
</div>
