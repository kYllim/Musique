{% extends 'base.html.twig' %}

{% block title %}Détails du commentaire{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-16 p-8 bg-gray-900 rounded-lg shadow-md text-white">
        <h1 class="text-3xl font-bold mb-6 text-green-500 text-center">Détails du commentaire</h1>

        <table class="w-full table-auto border-collapse text-left bg-gray-800 rounded-lg overflow-hidden">
            <tbody>
            <tr class="border-b border-gray-700">
                <th class="py-2 px-4 text-gray-300">Id</th>
                <td class="py-2 px-4">{{ comment.id }}</td>
            </tr>
            <tr class="border-b border-gray-700">
                <th class="py-2 px-4 text-gray-300">Contenu</th>
                <td class="py-2 px-4">{{ comment.content }}</td>
            </tr>
            </tbody>
        </table>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_comment_index') }}" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition">
                Retour à la liste
            </a>
            <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="bg-yellow-500 hover:bg-yellow-600 text-black px-4 py-2 rounded transition">
                Modifier
            </a>
            {{ include('comment/_delete_form.html.twig', { 'button_class': 'bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition' }) }}
        </div>
    </div>
{% endblock %}
