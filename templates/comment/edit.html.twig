{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-16 p-8 bg-gray-900 rounded-lg shadow-md text-white">
        <h1 class="text-3xl font-bold mb-6 text-green-500 text-center">Modifier le commentaire</h1>

        <div class="mb-6">
            {{ include('comment/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        <div class="flex justify-between mt-6">
            <a href="{{ path('app_comment_index') }}" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition">
                Retour à la liste
            </a>
            {{ include('comment/_delete_form.html.twig', { 'button_class': 'bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded transition' }) }}
        </div>
    </div>
{% endblock %}
