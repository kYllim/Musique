{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle Playlist{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-16 p-8 bg-gray-900 rounded-lg shadow-md text-white">
        <h1 class="text-3xl font-bold mb-6 text-green-500 text-center">Créer une nouvelle Playlist</h1>

        <div class="mb-6">
            {{ include('playlist/_form.html.twig', { 'button_label': 'Créer' }) }}
        </div>

        <div class="text-center">
            <a href="{{ path('app_playlist_index') }}"
               class="inline-block bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded transition">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
